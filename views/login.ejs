<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
		<!-- Bootstrap-5.3.2 -->
		<link href="css/bootstrap.min.css" rel="stylesheet">
		<!-- Fontawesome-Free-6.5.1 -->
		<link href="/css/fontawesome.min.css" rel="stylesheet">
		<link href="/css/fontawesome-brands.min.css" rel="stylesheet">
		<!-- Custom Styles -->
		<link href="css/login.css" rel="stylesheet">
        <title>Whales Manager</title>
    </head>
    <body>
		<main>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col col-4 wm-login-header">
						<h1><span class="fa-brands fa-docker fa-2xl wm-login-icon"></span></h1>
						<h1 class="fs-4">Sign in to Whales Manager</h1>
					</div>
				</div>
				<div class="row justify-content-center">
					<div class="col col-4 wm-login">
						<form action="login" method="post">
  							<label for="userID" class="form-label">User ID</label>
  							<input type="text" class="form-control" id="userID" required>
  							<label for="userPassword" class="form-label">Password</label>
  							<input type="password" class="form-control" id="userPassword" autocomplete="current-password" required>
							<h4><button type="submit" id="wm-login-button" class="btn">Log In</button></h4>
						</form>
					</div>
				</div>
			</div>
		</main>
    </body>
</html>
