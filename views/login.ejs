<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
		<!-- Bootstrap-5.3.2 -->
		<link href="css/bootstrap.min.css" rel="stylesheet">
		<!-- Custom Styles -->
		<link href="css/login.css" rel="stylesheet">
		<!-- Whales Manager Icons -->
                <link href="/css/wm-icons.css" rel="stylesheet">
        <title>Whales Manager</title>
    </head>
    <body>
		<main>
			<div class="container">
				<div class="row justify-content-center">
					<div class="col col-4 wm-login-header">
						<h1><span class="wm-icons wm-icons-docker wm-2xl wm-login-icon"></span></h1>
						<h1 class="fs-4">Sign in to Whales Manager</h1>
					</div>
				</div>
				<div class="row justify-content-center">
					<div class="col col-4 wm-login">
						<div id="login">
  							<label for="userID" class="form-label">User ID</label>
  							<input type="text" class="form-control" id="userID">
  							<label for="userPassword" class="form-label">Password</label>
  							<input type="password" class="form-control" id="userPassword">
							<h4><button type="button" id="wm-login-button" class="btn">Log In</button></h4>
						</div>
					</div>
				</div>
				<div class="row justify-content-center">
                                        <div class="col col-4 wm-login-error">
                                                <h3 id="loginErrorMessage" class="fs-5" hidden="true">Invalid user ID or Password</h3>
                                        </div>
                                </div>
			</div>
		</main>

		<!-- Custom Scripts -->
		<script src="/js/login.js"></script>
    </body>
</html>
